from tkinter import *
from tkinter import ttk
from random import *
from tkinter.font import names
import datetime
from tkinter import filedialog
from tkinter import messagebox
import os
from multiprocessing import Process
#==============================Functions==============
creds = 'loginsystem'


class GymStore:
    def __init__(self, parent):
        def CheckAge():
            try:
                age = int(AgeVar.get())
            except:
                response = messagebox.showinfo("Access Denied", "Please enter an input")
                return
            if 12<AgeVar.get()<19:
                AgeButton = Button(self.welcome_frame, text = "Confirm Age", command = CheckAge, state = DISABLED).place(x=145, y=190)
                if os.path.isfile(creds):
                    Login()
                else: 
                    Signup()
                    return
            else:
                response = messagebox.showerror("Access Denied", "You do not meet the age requirements")
                root.quit()
        def SignUp():
            self.welcome_frame.pack_forget()
            self.signup_frame = Frame(parent, width= 400, height =400)
            self.signup_frame.pack()
            self.signuptitleimage = PhotoImage(file="images/workout.png")
            self.signup_title_label = Label(self.signup_frame, image=self.signuptitleimage)
            self.signup_title_label.place(x=0,y=0)

            self.name_label = Label(self.signup_frame, text = "Name:")
            self.name_label.place(x=100,y=125)
            self.name_entry = Entry(self.signup_frame)
            self.name_entry.place(x=145,y=125)

            self.gmail_label = Label(self.signup_frame, text = "Gmail:")
            self.gmail_label.place(x=100,y=155)
            self.gmail_entry = Entry(self.signup_frame)
            self.gmail_entry.place(x=145,y=155)


            LabelAge = Label(self.signup_frame, text = "Age: ").place(x=100, y=260)
            EntryAge = Entry(self.signup_frame, textvariable = AgeVar).place(x=140, y=260)
            AgeButton = Button(self.signup_frame, text = "Confirm Age", command = CheckAge).place(x=145, y=280)
         
        self.welcome_frame = Frame(parent,width=400, height=400)
        self.welcome_frame.pack()
        AgeVar = IntVar()
        self.TitleImage = PhotoImage(file="images/workout.png")
        self.title_label = Label(self.welcome_frame, image=self.TitleImage)
        self.title_label.place(x=0,y=0)
        frontLabel1 = Label(self.welcome_frame, text = "This app is designed to serve a purpose where")
        frontLabel1.place(x=65, y = 110)
        frontLabel2 = Label(self.welcome_frame, text = " the user can order items such as food, drinks and so on.")
        frontLabel2.place(x=50, y=130)
        frontLabel3 = Label(self.welcome_frame, text = "In order to use this app, you must log in or register ")
        frontLabel3.place(x=60, y=150)
        frontLabel4 = Label(self.welcome_frame, text = "so that the program can recognize the total sum")
        frontLabel4.place(x=65, y=170)
        frontLabel5 = Label(self.welcome_frame, text = "when you finish ordering and so other user's")
        frontLabel5.place(x=65, y=190)
        frontLabel6 = Label(self.welcome_frame, text = " cannot see what you are ordering. ")
        frontLabel6.place(x=75, y=210)   
               
        button_sign_up = Button(self.welcome_frame, text = "Sign up", command = SignUp).place(x=100, y=270)
        button_login = Button(self.welcome_frame, text = "Login").place(x=190, y=270)
        #LabelAge = Label(self.welcome_frame, text = "Age: ").place(x=100, y=260)
        #EntryAge = Entry(self.welcome_frame, textvariable = AgeVar).place(x=140, y=260)
        #AgeButton = Button(self.welcome_frame, text = "Confirm Age", command = CheckAge).place(x=145, y=280)
        



if __name__ == "__main__":
    root = Tk()
    frames = GymStore(root)
    root.title("Gym Store")
    root.mainloop()


